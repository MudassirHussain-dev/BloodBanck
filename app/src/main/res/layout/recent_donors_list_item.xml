<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_white_round"
    android:padding="15dp"
    android:layout_margin="5dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgRecentUser"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/placeholder"
        android:transitionName="profile_transition"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/tvRecentName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/tvRBloodGroup"
        android:layout_toEndOf="@id/imgRecentUser"
        android:layout_centerVertical="true"
        android:text="Muhammad Waqar Akram"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:paddingStart="17dp"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/tvRBloodGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/circle_with_bordor_view_grey"
        android:gravity="center"
        android:text="A+"
        android:textColor="@color/colorPrimary" />

</RelativeLayout>