<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.PersonalInfoActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/personalVeriToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:title="Personal Information"
        app:titleTextColor="@color/black" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:padding="20dp"
            >

            <LinearLayout
                android:id="@+id/infoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/placeholder"
                    />

                <TextView
                    android:id="@+id/tvProfilePic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="Please choose your profile picture"
                    android:textColor="@color/colorPrimary" />

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/rounded_search_view"
                    android:hint="Name"
                    android:inputType="textPersonName"
                    android:paddingStart="20dp"
                    android:paddingTop="0dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="0dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/darkGrey" />

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rounded_search_view"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:paddingStart="20dp"
                    android:paddingTop="0dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="0dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/darkGrey" />

                <EditText
                    android:id="@+id/etLastBleed"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rounded_search_view"
                    android:hint="Last Bleed"
                    android:paddingStart="20dp"
                    android:paddingTop="0dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="0dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/darkGrey"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false" />

                <EditText
                    android:id="@+id/etGender"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rounded_search_view"
                    android:drawableEnd="@drawable/ic_arrow_drop_down_black_24dp"
                    android:drawablePadding="10dp"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="Gender"
                    android:inputType="phone"
                    android:paddingStart="20dp"
                    android:paddingTop="0dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="0dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/darkGrey" />

                <EditText
                    android:id="@+id/etBloodGroup"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rounded_search_view"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:drawableEnd="@drawable/ic_arrow_drop_down_black_24dp"
                    android:drawablePadding="10dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="Blood Group"
                    android:paddingStart="20dp"
                    android:paddingTop="0dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="0dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/darkGrey" />

                <EditText
                    android:id="@+id/etDOB"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rounded_search_view"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:drawableEnd="@drawable/ic_arrow_drop_down_black_24dp"
                    android:drawablePadding="10dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="Date of Birth"
                    android:paddingStart="20dp"
                    android:paddingTop="0dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="0dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/darkGrey" />


                <EditText
                    android:id="@+id/etCity"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rounded_search_view"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:drawableEnd="@drawable/ic_navigate_next_black_24dp"
                    android:drawablePadding="10dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="City"
                    android:paddingStart="20dp"
                    android:paddingTop="0dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="0dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/darkGrey" />


                <Button
                    android:id="@+id/btnFinish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/btn_bg"
                    android:text="FINISH"
                    android:textColor="@color/lightGrey" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/passLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tiPass"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    app:hintEnabled="false"
                    app:passwordToggleEnabled="true">

                    <EditText
                        android:id="@+id/etPass"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/rounded_search_view"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:paddingStart="20dp"
                        android:paddingTop="0dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="0dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/darkGrey" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tiCPass"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    app:hintEnabled="false"
                    app:passwordToggleEnabled="true">

                    <EditText
                        android:id="@+id/etCPass"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/rounded_search_view"
                        android:hint="Confirm Password"
                        android:inputType="textPassword"
                        android:paddingStart="20dp"
                        android:paddingTop="0dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="0dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/darkGrey" />

                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:id="@+id/tvForgotPass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Forgot Password"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:textSize="17dp"
                    android:visibility="gone"
                    />


                <Button
                    android:id="@+id/btnNext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/btn_bg"
                    android:text="Next"
                    android:textColor="@color/lightGrey" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>